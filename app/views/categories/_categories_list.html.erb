<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="categories_list">
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category, class:"btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-warning btn-sm" %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
